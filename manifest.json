{
  "manifest_version": 3,
  "name": "股票盯盘",
  "version": "1.0",
  "description": "一个简单的股票盯盘工具",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/icon.svg"
  },
  "icons": {
    "128": "img/icon.svg"
  }
} 